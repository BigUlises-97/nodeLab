<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i>Registrarse</h1>
            <% include ./partials/messages %>
                <form action="/users/register" method="POST" autocomplete="off">
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Ingresa un nombre" value="<%= typeof name != 'undefined' ? name: '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">Correo</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Ingresa tu correo" value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Ingresa una contraseña" value="<%= typeof password != 'undefined' ? password: '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirmar contraseña</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirma la contraseña" value="<%= typeof password2 != 'undefined' ? password2: '' %>" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                </form>
                <p class="lead mt-4">Ya tienes una cuenta? <a href="/users/login">Iniciar sesión</a></a>
                </p>
        </div>
    </div>
</div>