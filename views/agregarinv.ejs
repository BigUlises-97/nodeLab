<div class="py-5 text-center mt-5">
    <h2>Agregar inventario</h2>
</div>

<div class="container py-5">
    <form action="/dashboard/addinv" method="POST" class="container">
        <fieldset class="container">
            <legend>Datos del producto</legend>
            <div class="row container">
                <div class="form-group">
                    <label>Marca</label>
                    <input type="text" class="form-control" id="marca" placeholder="Marca del producto">
                </div>

                <div class="form-group ml-5">
                    <label>Compuesto</label>
                    <input type="text" class="form-control" id="compuesto" placeholder="Compuesto">
                </div>
                <div class="form-group ml-5">
                    <label>Cantidad (lt)</label>
                    <input class="form-control" type="number" id="cantidad" name="cantidad" step="0.1" min="0.1" max="3.00" value="0.1">
                </div>
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <textarea class="form-control" id="descripcion" rows="3" placeholder="Agrega una breve descripción..."></textarea>
            </div>
            <hr>
            <div class="text-center">
                <div class="container ">
                    <button type="submit" class="btn btn-primary">Agregar</button>
                    <a class="btn btn-secondary ml-5" href="/dashboard/inventario">Cancelar</a>
                </div>
            </div>
    </form>
</div>